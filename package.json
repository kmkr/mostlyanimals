{
  "name": "splendid-nudibranch",
  "version": "1.0.0",
  "main": "server/index.js",
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "start": "NODE_ENV=production node server/index.js",
    "start:server": "node server/index.js",
    "start:client": "webpack --watch --config client/webpack.config.js",
    "build": "npm run lint && npm run test && npm run package",
    "build:css":
      "postcss -o server/static/css/app.min.css server/static/css/app.css",
    "package":
      "NODE_ENV=production webpack -p --config client/webpack.config.js && npm run build:css",
    "lint": "eslint .",
    "test": "jest",
    "test:watch": "npm run test -- --watch"
  },
  "heroku-run-build-script": true,
  "dependencies": {
    "aws-sdk": "^2.7.7",
    "body-parser": "^1.15.2",
    "compression": "^1.6.2",
    "core-js": "^2.4.1",
    "express": "^4.14.0",
    "gm": "^1.23.0",
    "md5-file": "^3.2.3",
    "mongodb": "^2.2.11",
    "morgan": "^1.7.0",
    "multer": "^1.2.0",
    "pug": "^2.0.0-rc.4",
    "sitemap": "^1.8.2"
  },
  "devDependencies": {
    "autoprefixer": "^6.5.3",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-jest": "^19.0.0",
    "babel-loader": "^6.2.8",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.16.0",
    "babel-plugin-transform-object-rest-spread": "^6.19.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.16.0",
    "chartist": "^0.11.0",
    "cssnano": "^3.10.0",
    "debounce": "^1.1.0",
    "eslint": "^4.16.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.5.0",
    "jest": "^19.0.0",
    "picturefill": "^3.0.2",
    "postcss-cli": "^4.1.1",
    "postcss-css-variables": "^0.8.0",
    "postcss-import": "^11.0.0",
    "preact": "^8.2.7",
    "prettier": "^1.10.2",
    "smoothscroll-polyfill": "^0.4.0",
    "throttleit": "^1.0.0",
    "webpack": "^3.10.0"
  },
  "jest": {
    "moduleFileExtensions": ["js", "jsx"],
    "moduleDirectories": ["node_modules"],
    "moduleNameMapper": {
      "\\.(scss)$": "<rootDir>/__mocks__/style-mock.js"
    },
    "testRegex": "<rootDir>/(client|server|common)/.*_test\\.js"
  },
  "standard": {
    "ignore": ["server/static/"]
  }
}
